<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windykiss.session10.Fragment02"

    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            >

            <EditText
                android:id="@+id/editText4"
                android:inputType="number"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="230dp"
                android:textSize="40sp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_attach_money_black_24px"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00b9e6"
                android:textSize="15sp"
                android:text="Amount"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText4"
                android:layout_toStartOf="@+id/editText4" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            >

            <EditText
                android:id="@+id/editText5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="230dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#00b9e6"
                android:textSize="15sp"
                android:text="Send to"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText5"
                android:layout_toStartOf="@+id/editText5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            >

            <EditText
                android:id="@+id/editText6"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="230dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_3"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00b9e6"
                android:textSize="15sp"
                android:text="Note"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText6"
                android:layout_toStartOf="@+id/editText6" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

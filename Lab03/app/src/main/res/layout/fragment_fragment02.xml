<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windykiss.lab03.Fragment02"

    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_bar02"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00b9e6">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back"
            />

        <TextView
            android:layout_toRightOf="@id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="New payment"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:textSize="25sp"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_send"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/rl_bar02"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            >

            <EditText
                android:id="@+id/editText4"
                android:inputType="number"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="230dp"
                android:textSize="40sp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_money"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00b9e6"
                android:textSize="15sp"
                android:text="Amount"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText4"
                android:layout_toStartOf="@+id/editText4" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            >

            <EditText
                android:id="@+id/editText5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="230dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#00b9e6"
                android:textSize="15sp"
                android:text="Send to"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText5"
                android:layout_toStartOf="@+id/editText5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            >

            <EditText
                android:id="@+id/editText6"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="230dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_3"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00b9e6"
                android:textSize="15sp"
                android:text="Note"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText6"
                android:layout_toStartOf="@+id/editText6" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
